/* pages/movie/movie.wxss */
.topBar{
    height:100rpx;
    width:100%;
    background:#e54847;
    position:relative;
    display:flex;
    justify-content:center;
    align-items:center;
}
.topBar text{
    font-size:36rpx;
    color:white;
}
.topBar .btn{
    position:absolute;
    right:20rpx;
    width:34rpx;
    height:32rpx;
    display:block;
}
.topBar .btn image{
    width:100%;
    height:100%;
    display:block;
}
.topBar .btn .bar-list{
    position:absolute;
    right:20rpx;
    top:60rpx;
    width:220rpx;
    height:368rpx;
    background:white;
    display:flex;
    flex-direction:column;
    align-items:center;
    justify-content:center;
}
.topBar .btn .bar-list .bar-list-item{
    width:100%;
    height:92rpx;
    text-align:center;
    line-height:92rpx;
    border-bottom:1rpx solid #f0f0f0; 
    box-sizing:border-box;
}
.topNav{
    height:90rpx;
    width:100%;
    display:flex;
    justify-content:space-between;
    align-items:center;
    border-bottom:1px solid #e6e6e6;
}
.topNav .left{
    width:60rpx;
    display:flex;
    margin-left:20rpx;
    font-size:30rpx;
    color:rgb(102, 102, 102);
}
.topNav .center{
    width:500rpx;
    display:flex;
    justify-content:space-between;
}
.topNav .center .center-item{
    height:40rpx;
    text-align:center;
    /* line-height:40rpx; */
    font-weight:bold;
    color:#666;
    margin-top:24rpx;
}
.topNav .center .active{
    color:black;
    padding-bottom:20rpx;
    border-bottom:2px solid red;
}
.topNav .right{
    width:40rpx;
    height:40rpx;
    margin-right:20rpx;
}
.topNav .right image{
    width:100%;
    height:100%;
    display:block;
}
.content{
    background:#f4f4f4;
}
.hot{
    padding:24rpx 30rpx;
    margin-bottom:20rpx;
    background:#fff;
    height:346rpx;
}
.hot>text{
    font-size:28rpx;
    font-size:#333;
    display:block;
    margin-bottom:24rpx;
}
.hot scroll-view{
    display:flex;
    height:286rpx;
}
.hot scroll-view .scroll-item{
    width:170rpx;
    height:286rpx;
    margin-right:20rpx;
    position:relative;
}
.hot scroll-view .scroll-item image{
    width:170rpx;
    height:230rpx;
}
.hot scroll-view .scroll-item .hotScore{
    position:absolute;
    left:8rpx; bottom:60rpx;
    color:#faaf00;
    font-size:22rpx;
    font-weight:700;
    width:100%;
}
.hot scroll-view .scroll-item .hotName{
    display:block;
    width:170rpx;
    overflow:hidden;
    text-overflow:ellipsis;
    white-space:nowrap;
    font-size:26rpx;
    color:#222;
}
.movie{

}
.movie .movie-item{
    width:100%;
    height:228rpx;
    padding-left:30rpx;
    box-sizing:border-box;
    background:#fff;
    display:flex;
    align-items:center;
}
.movie .movie-item image{
    margin-top:24rpx;
    width:128rpx;
    height:180rpx;
    display:block;
}
.movie .movie-item .con-center{
    margin-left:28rpx;
    width:474rpx;
    height:180rpx;
    display:flex;
    flex-direction:column;
    margin-top:48rpx;
    padding:0 0 28rpx 0;
    border-bottom:1px solid #ccc;
    flex-shrink: 0;
}
.movie .movie-item .con-center text{
    display:block;
    width:100%;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
}
.movie .movie-item .con-center .movieName{
    font-weight:700;
    font-size:34rpx;
    color:#333;
    margin-bottom:14rpx;
}
.movie .movie-item .con-center .scwish{
    color:#faaf00;
    font-size:30rpx;
}
.movie .movie-item .con-center .desc{
   color:rgb(102, 102, 102);
   font-size:26rpx;
   margin-top:12rpx;
}   
.movie .movie-item .con-center .showInfo{
    color:rgb(102, 102, 102);
    font-size:26rpx;
    margin-top:12rpx;
}
.movie .movie-item .con-right{
    margin-top:36rpx;
    width:108rpx;
    height:54rpx;
    color:white;
    text-align:center;
    line-height:54rpx;
    font-size:24rpx;
    border-radius:32rpx;
    margin-right:28rpx;
}