/* pages/six/six.wxss */
.box{
    display:flex;
    flex-direction:row;
    justify-content:space-around;
    padding:20rpx;
    border-bottom:1rpx solid black;
    align-items:center;
}
.box .center{
    width:350rpx;
    display:flex;
    flex-direction:column;
}
.box .center text:first-child{
    font-weight:550;
}
.box .center text:nth-child(2){
    color:red;
}
.box .num{
    display:flex;
    align-items:center;
}
.box .num input{
    width:60rpx;
    text-align:center;
    margin:0 10rpx;
    border:1rpx solid #f2f2f2;
}
.box .num button{
    display:inline-block;
    padding:0px;
    width:50rpx;
    height:50rpx;
    line-height:50rpx;
    background:#ccc;
}