/* pages/four/four.wxss */
.scroll{
    display:flex;
    flex-direction:row;
    height:400rpx;
}
.scroll view{
    width:300rpx;
    height:100px;
    border:1px solid #000;
    flex-shrink:0;
}
.box{
    padding:10px;
    display:flex;
    flex-direction:row;
    justify-content:space-around;
}
.box image{
    width:200rpx; 
}
.box>view{
    width:350rpx;
    display:flex;
    flex-direction:column;
    justify-content:space-between;
    margin-left:10rpx;
}
.box>view text:nth-child(3){
    overflow:hidden;
    text-overflow:ellipsis;
    white-space:nowrap;
}
.box>view text:nth-child(4){
    font-size:14px;
}
.box button{
    width:100rpx !important;
    margin:0 !important;
    height:60rpx;
    border-radius:20rpx;
    line-height:60rpx;
    padding:0;
    background:#F03D37;
    color:white;
    align-self:center;
}