/* pages/searchList/searchList.wxss */
.list{
    
}
.list .list_item{
    display:flex;
    padding:15rpx;
    align-items:center;
}
.list_item image{
    width:200rpx;
}
.list_item>view{
    display:flex;
    flex-direction:column;
    justify-content:space-between;
    width:500rpx;
    height:200rpx;
}
.list_item>view .feature{
    overflow:hidden;
    white-space:nowrap;
    text-overflow:ellipsis;
}

.sort{
    display:flex;
    height:80rpx;
}
.sort view{
    flex:1;
    border:1px solid black;
    line-height:80rpx;
    display:flex;
    align-items:center;
    justify-content:center;
}
.list{
    box-sizing:border-box;
    width:50vw;
    padding:20rpx;
    display:inline-block;
}
.list image{
    width:100%;
}