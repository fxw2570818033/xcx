/* pages/my/my.wxss */
.top{
    background:rgb(235, 162, 27);
    height:200rpx;
    display:flex;
    box-sizing:border-box;
    padding:10rpx 20rpx;
    justify-content:space-between;
}
.top image{
    width:80rpx;
}
.top .left{
    display:flex;
    height:100%;
    align-items:center;
}
.top .left view{
    display:flex;
    flex-direction:column;
}
.top .left view text:nth-child(2){
    color:red;
}
.top .left image{
    width:120rpx;
}
.top .left text{
    margin-left:10rpx; 
}
.top .right{
    display:flex;
    height:60%;
}
.top .right view{
    display:flex;
    flex-direction:column;
    align-items:center;
    color:#fff;
}